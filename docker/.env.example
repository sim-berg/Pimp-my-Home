# ===========================================
# Pimp your Home - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# Medusa Configuration
# ===========================================
# Generate secure secrets: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_min_32_chars
COOKIE_SECRET=your_cookie_secret_min_32_chars
MEDUSA_PUBLISHABLE_KEY=pk_xxxxx

# Environment
NODE_ENV=development

# ===========================================
# CORS Configuration
# ===========================================
# Production domains (adjust for your deployment)
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:9000
AUTH_CORS=http://localhost:9000

# ===========================================
# Polar Payment Configuration
# ===========================================
# Get these from https://polar.sh/settings/developers
POLAR_ACCESS_TOKEN=your_polar_access_token
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret
POLAR_SERVER=sandbox

# ===========================================
# Storefront Configuration
# ===========================================
STOREFRONT_URL=http://localhost:3000

# ===========================================
# Twitch Configuration (Phase 2)
# ===========================================
# Get these from https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_WEBHOOK_SECRET=your_twitch_webhook_secret
TWITCH_CHANNEL=your_twitch_channel_name

# ===========================================
# PayPal Configuration (Phase 2)
# ===========================================
# Get these from https://developer.paypal.com
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
