# ===========================================
# Pimp your Home Storefront - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Medusa Backend
# ===========================================
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_xxxxx

# ===========================================
# Storefront
# ===========================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# Polar Payment
# ===========================================
# Get these from https://polar.sh/settings/developers
POLAR_ACCESS_TOKEN=your_polar_access_token
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret
POLAR_PRODUCT_PRICE_ID=price_xxxxx
NEXT_PUBLIC_POLAR_SERVER=sandbox

# ===========================================
# Twitch (Phase 2)
# ===========================================
NEXT_PUBLIC_TWITCH_CHANNEL=your_twitch_channel
TWITCH_SERVICE_URL=http://localhost:4000
